<IfModule mod_rewrite.c>
    RewriteEngine On

    # Force HTTPS only for production environment
    RewriteCond %{ENV:ENVIRONMENT} production
    RewriteCond %{HTTP:X-Forwarded-Proto} !https
    RewriteCond %{HTTP_HOST} !^localhost [NC]  # Allow localhost to bypass HTTPS
    RewriteRule ^ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301]

    # Prevent direct access to files and directories
    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteCond %{REQUEST_FILENAME} !-d

    # Route all /api/* requests to index.php with the URL as a query string
    RewriteCond %{REQUEST_URI} ^/api/ [NC]
    RewriteRule ^(.*)$ index.php?url=$1 [QSA,L]

    # Fallback for non-file/directory requests
    FallbackResource /index.php
</IfModule>

# Prevent directory listing
Options -Indexes
